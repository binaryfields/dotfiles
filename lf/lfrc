set incsearch true
set infotimefmtnew "2006-01-02 15:04"
set infotimefmtold "2006-01-02 15:04"
set timefmt "2006-01-02 15:04"
set previewer ~/.config/lf/pv.sh

# bindings

## 1/navigation
map <up> up    
map <pgup> page-up
map <c-u> half-up
map <c-y> scroll-up
map <down> down
map <pgdn> page-down
map <c-d> half-down                
map <c-e> scroll-down         
map <home> top
map <end> bottom
map <left> updir

## 1/selection
map <space> :toggle; down
map a glob-select * 
map A invert
map u unselect

## 2/basics
map <enter> open
map q quit
map w $$SHELL
map e $$EDITOR "$f"
map r $LESSOPEN='| ~/.config/lf/pv.sh %s' less -R "$f"
map <c-r> reload

#map $ shell
#map % shell-pipe
#map ! shell-wait
#map & shell-async

## 2/file ops
map x cut
map c copy
map v paste
map C clear

map <f-2> rename
map <delete> delete

# 2/search
map f find
map F find-back 
map <f-3> find-next
map <F-3> find-prev

map / search
map ? search-back
map n search-next
map N search-prev

# 2/shortcuts
map b mark-load 
map B mark-save
map <c-b> mark-remove

map gh cd ~
map gv cd ~/dev
map gd cd ~/docs
map gD cd ~/downloads
map gm cd ~/media

## 3/settings
map zh set hidden!
map zr set reverse!
map zn set info
map zs set info size
map zt set info time
map za set info size:time
map sn :set sortby natural; set info
map ss :set sortby size; set info size
map st :set sortby time; set info time
map sa :set sortby atime; set info atime
map sc :set sortby ctime; set info ctime
map se :set sortby ext; set info

map . set hidden!
map d set info size:time
map D set info

# commands

cmd extract ${{
    set -f
    case $f in
        *.tar.*) tar xavf $f;;
        *.zip) unzip $f;;
    esac
}}

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}
